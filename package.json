{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ftrack",
  "title": "ftrack",
  "description": "Interacting with ftrack",
  "icon": "ftrack-logo-white.png",
  "author": "lucaas",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "assigned_tasks",
      "title": "Assigned Tasks",
      "description": "Show assigned tasks",
      "mode": "view"
    },
    {
      "name": "search_projects",
      "title": "Projects",
      "description": "Search ftrack projects",
      "mode": "view"
    },
    {
      "name": "search_versions",
      "title": "Versions",
      "description": "Search ftrack projects",
      "mode": "view"
    },
    {
      "name": "search_typed_context",
      "title": "Objects",
      "description": "Search ftrack objects",
      "mode": "view"
    },
    {
      "name": "search_list",
      "title": "Lists",
      "description": "Search ftrack lists",
      "mode": "view"
    },
    {
      "name": "search_review_sessions",
      "title": "Reviews",
      "description": "Search ftrack reviews",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "ftrackServerUrl",
      "title": "Server URL",
      "description": "URL to your ftrack workspace",
      "placeholder": "https://my-workspace.ftrackapp.com",
      "type": "textfield",
      "required": true
    },
    {
      "name": "ftrackApiUser",
      "title": "Username",
      "description": "ftrack Username - Copy it from 'My account' in ftrack Studio",
      "placeholder": "name@example.com",
      "type": "textfield",
      "required": true
    },
    {
      "name": "ftrackApiKey",
      "title": "API Key",
      "description": "ftrack API Key - Copy it from 'My account' in ftrack Studio",
      "type": "password",
      "required": true
    },
    {
      "name": "assignedTasksFilter",
      "title": "Additional Filter",
      "placeholder": "ancestors.id is \"2465912c-2441-11ed-8edb-9e89dc32fb4f\"",
      "description": "Optional filter to limit assigned tasks results, e.g. to a project",
      "type": "textfield",
      "required": false,
      "default": ""
    }
  ],
  "dependencies": {
    "@ftrack/api": "^1.4.0",
    "@raycast/api": "^1.48.5",
    "@raycast/utils": "^1.4.18",
    "cross-fetch": "^3.1.5",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@types/node": "18.14.2",
    "@types/react": "18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
